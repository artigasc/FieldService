<div class="reportsot col-6">
    <div class="reportsot3 col-md-12">
        <h4>SOBRE EL SUPERVISOR:</h4>

        @if (!Model.Report.Sent2) {
            if (!Model.Report.Check) {
                if (Model.Report.UrlFile != "") {

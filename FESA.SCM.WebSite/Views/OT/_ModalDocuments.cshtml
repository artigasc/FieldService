@model List<FESA.SCM.WebSite.Models.DocumentModel>; 
@{
    ViewData["Title"] = "_ModalDocuments";
}

<div class="modal fade" id="ChecklistView" tabindex="-1" role="dialog" aria-labelledby="ChecklistView" aria-hidden="true" style="padding-right: 17px;">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 350px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id=""></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="display: block;">
                <h4 style="font-weight: bold;margin-bottom: 2rem;">Documentos Requeridos:</h4>
                @foreach (var item in Model) {
                    <h5 style="color: #fc0;font-weight: bold;padding: 5px 0;font-size: 20px;">@item.Name</h5>
                    <h4 style="padding: 5px 0;font-weight: bold;color: #505050;">@item.Name</h4>
                    <p style="font-size: 14px;color: #626262;">Fecha estimada de inicio</p>
                    <div class="form-group">
                        <label for="LastName" style="font-size: 14px;" class="text-danger">Motivo</label>
                        <input type="text" class="form-control" id="LastName" name="LastName" aria-describedby="" placeholder="" value="Texto Motivo">
                    </div>
                    <hr>
                }
            </div>
            <div class="modal-footer" style="display: block;text-align: center;">
                <button type="button" class="btn btn-yellow" data-dismiss="modal" style="margin: 0 12px;">Aceptar</button>
            </div>
        </div>
    </div>
</div>

